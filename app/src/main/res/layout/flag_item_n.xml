<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:minHeight="64dp"
    android:paddingTop="15dp"
    app:theme="@style/Theme.MaterialComponents"
    >

    <ImageView
        android:id="@+id/flagComment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/WriteBullyName"
        android:layout_toRightOf="@+id/WriteBullyName"
        android:background="@drawable/flag"
        />

    <TextView
        android:id="@+id/WriteBullyName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/TikTok"
        android:text=""
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="@color/blue"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/WriteBullyComment"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/WriteBullyName"
        android:textDirection="ltr"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:maxLines="2"
        android:textStyle="normal"
        android:text=""
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/black"
         />

    <ImageView
        android:id="@+id/TikTok"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/tiktok" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/WriteBullyComment"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>