<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Parent_Profile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="100"
            android:gravity="center_horizontal"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:theme="@style/Theme.MaterialComponents"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="21dp" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="107dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="First Name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#04406E"
            android:textSize="25dp"
            app:theme="@style/Theme.MaterialComponents" />

        <EditText
            android:id="@+id/firstNameB"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Last Name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#04406E"
            android:textSize="25dp"
            app:theme="@style/Theme.MaterialComponents" />

        <EditText
            android:id="@+id/lastNameB"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Email"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#04406E"
            android:textSize="25dp"
            app:theme="@style/Theme.MaterialComponents" />

        <EditText
            android:id="@+id/EditEmailAddressB"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textVieww"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="29dp"
            android:text="Password"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#04406E"
            android:textSize="25dp"
            app:theme="@style/Theme.MaterialComponents" />


        <Button
            android:id="@+id/changePass"
            android:layout_width="215dp"
            android:layout_height="60dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="30dp"
            android:text="Change Password?"
            android:textColor="@color/blue"
            app:backgroundTint="#E5E4E2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.667" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="246dp"
            android:layout_height="94dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="35dp"
            android:text="Save"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="@color/white"
            app:backgroundTint="#ee9a38"
            app:theme="@style/Theme.MaterialComponents" />

    </LinearLayout>


    <ImageView
        android:id="@+id/dotEdit"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>