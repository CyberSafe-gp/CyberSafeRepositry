<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    >



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        app:theme="@style/Theme.MaterialComponents">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center_horizontal"
            android:layout_weight="100"
            android:text="Incoming Report Info"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:theme="@style/Theme.MaterialComponents"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="21dp" />

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/Incom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:minHeight="340dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints,NotSibling" >


        <TextView
            android:id="@+id/WriteChildComment"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ChildComment"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:background="@color/lightGray"
            android:elevation="10dp"
            android:gravity="center"
            android:maxWidth="320dp"
            android:minWidth="200dp"
            android:padding="10dp"
            android:text=" "
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <TextView
            android:id="@+id/cyberbully"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ChildName"
            android:layout_marginTop="10dp"
            android:text="Your child is being cyberbullying"
            android:textColor="#ee9a38"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

        <TextView
            android:id="@+id/ChildComment"
            android:layout_below="@+id/cyberbully"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/blue"
            android:text="Comment:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BullyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/WriteChildComment"
            android:layout_marginTop="50dp"
            android:textColor="@color/blue"
            android:text="Bullied Username:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/WriteBullyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" "
            android:layout_below="@id/BullyAccount"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>


        <TextView
            android:id="@+id/Application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/WriteChildComment"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/BullyAccount"
            android:text="Application:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Application"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="235dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="200dp"
            android:background="@drawable/tiktoklogo" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
